<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnglishVocabularyQuizTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    
    <style name="rightToast">

        <item name="colorBackground">#ff8585</item>
        <item name="textColor">#4CAF50</item>
        <item name="iconLeft">@drawable/ic_baseline_done_all_24</item>
        <item name="strokeColor">#83000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">15dp</item>

    </style>
    
    <style name="wrongToast">

        <item name="android:background">#38D8A6</item>
        <item name="textColor">#FF0202</item>
        <item name="iconLeft">@drawable/ic_baseline_close_24</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">15dp</item>

    </style>
    

    <style name="Theme.EnglishVocabularyQuizTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EnglishVocabularyQuizTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EnglishVocabularyQuizTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>